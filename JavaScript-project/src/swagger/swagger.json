                      "schema": {
                          "$ref": "#/definitions/login"
                      }
                  }
              ],
              "produces": [
                  "application/json"
              ],
              "responses": {
                  "201": {
                      "description": "User fetched sucessfully"
                  },
                  "404": {
                    "description": "EmailID doesn't Exists"
                  },
                  "500": {
                      "description": "Internal server error"
                  }
              }
              
          }
      }, 
      "/users/forgotpassword": {
            "post": {
        "tags": ["Users"],
